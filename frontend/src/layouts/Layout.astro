---
interface Props {
  title?: string;
}

const { title = 'MagangHub v2' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <h1>MagangHub v2</h1>
        <p>MagangHub Remastered</p>
      </div>
    </header>
    
    <main class="container">
      <slot />
    </main>
    
    <footer>
      <div class="container">
        <p>Data sourced from maganghub.kemnaker.go.id • Updated daily</p>
        <p style="font-size: 0.9rem; margin-top: 0.5rem;">Built with Astro & FastAPI • For portfolio purposes</p>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    --primary: #2563eb;
    --primary-dark: #1d4ed8;
    --secondary: #64748b;
    --background: #f8fafc;
    --card: #ffffff;
    --text: #1e293b;
    --text-light: #64748b;
    --border: #e2e8f0;
  }
</style>